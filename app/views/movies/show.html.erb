<div class="container-fluid fondo_i">

  <div class="">


    <div class="row">

      <div class="col-md-12">
       <center>
         <h1 class="page nn">
         <br>
         <%= @movie.name %>


       </h1>
       </center>
       <% if estrella_pelicula != 0 %>
       <div class="calificacion">
         <%= image_tag("star1.png", class:'estrella_1')  %>
         <h1 class="puntua">
           <%= estrella_pelicula.to_s %>
         </h1>  
       </div>
       <% end %> 
       <table  class="table table-hover">
         <tr>
           <td> <strong>Año:</strong>
            <%= @movie.year %></td>
            <td><strong>Director:</strong>
              <%= @movie.director %></td>
              <td><strong>Duracion:</strong>
                <%= @movie.duration %></td>
                <td><strong>País:</strong>
                  <%= @movie.country %></td>
                </tr>
              </table>
              <div class="row">
               <div class="col-md-12 ">
                 <div class="descripcion">
                  <h5 class="letrashow">
                      



                    <b>Categoría:</b>  <p><%= @movie.category.name rescue nil %></p>
                    <b>Actores:</b>  <p>
                    <%= @movie.actors %>
                  </p> 
                  <b>Descripciòn</b> <p>
                  <%= @movie.description %>
                </p>
              </h5>
            </div>



          </div>

        </div>

      </div>

      <div class="col-md-12">
        <%= image_tag @movie.avatar.url,  class:'imagen_1 img-responsive' %>
        
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12">
       <div class="embed-container">
         <iframe class="sombra_1" src="<%= @movie.video %>" frameborder="0" allowfullscreen></iframe>
       </div>

     </div>
    
   </div>

   <% if current_user == User.find(1) %>
   <%= link_to 'Editar', edit_movie_path(@movie) %> |
   <%= link_to 'Atras', movies_path %>
   <% end %>

   <!-- Button trigger modal -->


   <!-- Modal -->
   <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

        </div>
        <div class="modal-body">
          <%= render 'comments' %>
        </div>

      </div>
    </div>
  </div>




</div>



</div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= link_to  "#{@movie.link}", :target => "_blank"  do %>

        <%= image_tag('play.png', class: 'img-responsive img-circle playing') %>

      <% end %>

    </div>
    <div class="col-md-6 bajar_com">
      

<div class="descripcion scroll">
  <%= render 'list_comments' %>
</div>

    </div>
  </div>
</div>





